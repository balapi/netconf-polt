      "TR-451: Section 5.2.1 vOMCI Function Connectivity";
  }

  // Groupings

  grouping onu-criteria-grouping {
    description
      "The choice allows to specify combinations of ONU criteria
       values or allows to indicate any ONU.";
    choice onu-criterion {
      default "any-onu";
      description
        "ONU selection criterion values";
      case any-onu {
        leaf any-onu {
          type empty;
          description
            "Identifies any ONU";
        }
      }
      case onu-vendor {
        leaf onu-vendor {
          type vomci-types:onu-vendor-id;
          description
            "ONU vendor as defined in the TC layer ONU-ID.";
        }
      }
      case onu-serial-number {
        leaf onu-serial-number {
          type xpon-types:onu-serial-number;
          description
            "ONU serial number as defined in the TC layer
             ONU serial number.";
        }
      }
    }
    //choice
  }
}
